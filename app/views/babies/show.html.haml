.card
  .card-body
    %p
      %b=t('labels.name')
      = @baby.name
    %p
      %b=t('labels.birthday')
      = @baby.birthday
    %p
      %b=t('labels.mother_name')
      = @baby.mother_name
    %p
      %b=t('labels.father_name')
      = @baby.father_name
    %p
      %b=t('labels.address')
      = @baby.address
    %p
      %b=t('labels.phone')
      = @baby.phone
    .row
      .offset-8
      .col-2
        = link_to t("accions.back"), babies_path, class: "btn btn-secondary btn-block"
      .col-2
        = link_to t("accions.edit"), edit_baby_path(@baby), class: "btn btn-primary btn-block"
