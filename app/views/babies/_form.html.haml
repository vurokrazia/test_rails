= form_for @baby,builder: BootstrapFormBuilder do |f|
  .row
    = f.errors

    = f.label t('labels.name')
    = f.text_field :name

    = f.label t('labels.birthday')
    = f.date_select :birthday

    = f.label t('labels.mother_name')
    = f.text_field :mother_name

    = f.label t('labels.father_name')
    = f.text_field :father_name

    = f.label t('labels.address')
    = f.text_field :address

    = f.label t('labels.phone')
    = f.text_field :phone

    .offset-8.col-2
      = link_to t("accions.back"), babies_path, class: "btn btn-secondary btn-block"
    .col-2
      = f.submit t("accions.save"), class:"btn-block "